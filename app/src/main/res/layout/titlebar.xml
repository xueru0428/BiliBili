<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FB7299"
   android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_slide"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_drawer_home" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/title_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bili_default_avatar" />

        <TextView
            android:id="@+id/tv_login"
            android:text="未登录"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <ImageButton
        android:layout_marginLeft="120dp"
        android:background="@drawable/ic_menu_top_game_center"
        android:id="@+id/title_game"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginLeft="14dp"
        android:background="@drawable/ic_toolbar_menu_download"
        android:id="@+id/title_download"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton

        android:layout_marginLeft="14dp"
        android:background="@drawable/ic_toolbar_menu_search"
        android:id="@+id/title_search"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
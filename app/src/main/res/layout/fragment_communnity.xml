<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_hint_search"
                    android:gravity="center_vertical"
                    android:hint="搜素视频、番剧、up主或av号"
                    android:drawablePadding="5dp"
                    android:textColor="#44000000" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_scan"
                    android:gravity="center_vertical" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="大家都在搜"
                android:textColor="#44000000"
                android:textSize="12sp" />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="3dp">

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/id_flowlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        zhy:max_select="-1"></com.zhy.view.flowlayout.TagFlowLayout>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_load_more"
                        android:text="查看更多"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/ic_arrow_down_gray_round"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="100dip"
                        android:layout_height="1dip"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_load_more"
                        android:background="#999" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dip"
                        android:layout_height="1dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_load_more"
                        android:background="#999" />
                </RelativeLayout>


            </LinearLayout>




                <TextView
                    android:id="@+id/tv_group"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_group"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="兴趣圈"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_topic"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_header_topic_center"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="话题中心"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_activity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_header_activity_center"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="活动中心"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_header_black_list_center"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="小黑屋"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/tv_original"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_btn_rank_original"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/ic_light_gray_arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="原创排行榜"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_rank_all"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_btn_rank_all"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/ic_light_gray_arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="全区排行榜"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_game"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_btn_game"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="游戏中心"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_btn_shop"
                    android:drawablePadding="20dp"
                    android:drawableRight="@drawable/ic_light_gray_arrow_right"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="周边商城"
                    android:textColor="#000000" />



        </LinearLayout>




</android.support.v4.widget.NestedScrollView>